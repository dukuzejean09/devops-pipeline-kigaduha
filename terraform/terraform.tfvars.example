# Terraform Variables Example File for Azure
# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to version control!

# Azure Service Principal Credentials
# Get these from: az ad sp create-for-rbac --name "terraform-sp" --role Contributor
subscription_id = "f6ade690-722f-42c6-8f3d-800249ece624"
client_id       = "e03ae4b2-0591-4a72-a14d-9cb2414be218"
client_secret   = "YOUR_CLIENT_SECRET_HERE"  # Replace with actual password from SP creation
tenant_id       = "fbb4c579-089a-42ec-bd9e-40b04d9c2cbd"

# Infrastructure Configuration
project_name = "devopspipeline"
environment  = "dev"
location     = "East US"  # Options: "East US", "West Europe", "Southeast Asia", etc.

# VM Configuration
vm_size        = "Standard_B2s"  # Options: Standard_B1s, Standard_B2s, Standard_D2s_v3
admin_username = "azureuser"

# SSH Public Key
# Generate with: ssh-keygen -t rsa -b 4096 -f ~/.ssh/devops-pipeline
# Then copy content of: cat ~/.ssh/devops-pipeline.pub
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQDXXXX... your-email@example.com"

# Additional Tags (optional)
tags = {
  Owner      = "DevOps Team"
  CostCenter = "Engineering"
}
